@model IEnumerable<Ghost.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Filter by name: <input type="text" name="searchName" value="@ViewData["SN"]" />
            <input style="color:red" type="submit" value="Filter" class="btn btn-default" />
        </p>
    </div>
    <div class="form-actions no-color">
        <p>
            Filter by degree: <input type="text" name="searchDegree" value="@ViewData["SD"]" />
            <input style="color:red" type="submit" value="Filter" class="btn btn-default" />
        </p>
    </div>
    <div class="form-actions no-color">
        <p>
            Filter by rank: <input type="text" name="searchRank" default="0" value="@ViewData["SR"]" />
            <input style="color:red" type="submit" value="Filter" class="btn btn-default" />
        </p>
    </div>
</form>
<a asp-action="Index">Back to Full List</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcademicRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HireDate)
            </th>
            <th>
                Courses as First Teacher
            </th>
            <th>
                Courses as Second Teacher
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Degree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcademicRank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficeNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HireDate)
                </td>
                <td>
                    @foreach (var course in item.Courses1)
                    {
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">
                            @Html.DisplayFor(modelItem => course.Title)
                        </a>
                        <br />
                    }
                </td>
                <td>
                    @foreach (var course in item.Courses2)
                    {
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">
                            @Html.DisplayFor(modelItem => course.Title)
                        </a>
                        <br />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
